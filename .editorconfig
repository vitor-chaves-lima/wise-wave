root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 4

[*.yml, *.yaml]
indent_size = 2

[*.js, *.ts]
indent_size = 4

# HTML files
[*.html]
indent_size = 4

[*.css, *.scss]
indent_size = 4
